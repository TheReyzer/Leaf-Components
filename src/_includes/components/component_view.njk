{# Title of Components #}
{% macro title_box(params) %}
    <!-- Hero -->
    <section class="flex flex-col mt-7 w-screen md:w-11/12 lg:w-9/12 mx-auto px-10 text-center">
        <h1 class="font-extrabold text-5xl lg:text-6xl mb-3">{{ params.title }}</h1>
        <span class="flex flex-row items-center w-fit mx-auto gap-x-2 no-sel">
            <a href="/" class="font-bold transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 fill-slate-500">
                    <path d="M11.47 3.84a.75.75 0 011.06 0l8.69 8.69a.75.75 0 101.06-1.06l-8.689-8.69a2.25 2.25 0 00-3.182 0l-8.69 8.69a.75.75 0
                        001.061 1.06l8.69-8.69z"/>
                    <path d="M12 5.432l8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 01-.75-.75v-4.5a.75.75 0
                    00-.75-.75h-3a.75.75 0 00-.75.75V21a.75.75 0 01-.75.75H5.625a1.875 1.875 0 01-1.875-1.875v-6.198a2.29 2.29 0
                    00.091-.086L12 5.43z"/>
                </svg>
            </a>
            <span class="opacity-50 font-bold text-slate-500">/</span>
            <a href="." class="font-bold text-sky-500 transition-colors">{{ params.title }}</a>
        </span>
    </section>
{% endmacro %}


{# Name of indvidual component #}
{% macro component_info(params) %}
    <span class="absolute -top-10 left-0 lg:-left-24 before:block before:absolute before:-inset-1 before:mt-3 before:h-4 before:-skew-y-3 before:bg-{{ 'sky' if params.type == 'elements'}}{{ 'rose' if params.type == 'forms'}}{{ 'yellow' if params.type == 'modals'}}{{ 'green' if params.type == 'navigation'}}{{ 'purple' if params.type == 'feedback'}}-500/60 inline-block">
        <span class="relative text-slate-900 dark:text-slate-100 font-bold text-xl">{{ params.name }}</span>
    </span>
{% endmacro %}