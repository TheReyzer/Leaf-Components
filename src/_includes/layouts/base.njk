<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/style.css" rel="stylesheet">
        <title>{{  renderData.title }} Componetentes Tailwind Css</title>

        <script>
            // It's best to inline this in `head` to avoid FOUC (flash of unstyled content) when changing pages or themes
            if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        </script>

    </head>
    <body class="font-inter bg-white text-slate-900 dark:bg-slate-900 dark:text-slate-100">
        
        {% include "components/navbar.njk" %}
        
        {{ content | safe }}

        {# Btn to Top #}
        <button class="btn-top no-sel p-3 z-[999] bg-sky-600 hover:bg-sky-700 transitions-colors text-white rounded-full shadow-md hidden bottom-5 right-5 fixed">
            <svg
                aria-hidden="true"
                focusable="false"
                data-prefix="fas"
                class="w-4 h-4"
                role="img"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 448 512"
            >
                <path
                fill="currentColor"
                d="M34.9 289.5l-22.2-22.2c-9.4-9.4-9.4-24.6 0-33.9L207 39c9.4-9.4 24.6-9.4 33.9 0l194.3 194.3c9.4 9.4 9.4 24.6 0 33.9L413 289.4c-9.5 9.5-25 9.3-34.3-.4L264 168.6V456c0 13.3-10.7 24-24 24h-32c-13.3 0-24-10.7-24-24V168.6L69.2 289.1c-9.3 9.8-24.8 10-34.3.4z"
                ></path>
            </svg>
        </button>

        {% include "components/footer.njk" %}

        <script src="/js/app.js"></script>
    </body>
</html>
